/* components/component-gameNews/component-gameNews.wxss */

.news-list {
  height: 100%;
}

.scroll-list {
  height: 100%;
}

.no-result {
  height: 100%;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
}

.news-list-container {
  height: calc(100% + 5rpx);
}

.news-item {
  height: 150rpx;
  display: flex;
  flex-flow: row;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
}

.left-part {
  width: 75%;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.news-title {
  font-size: 30rpx;
}

.news-info {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  padding-right: 50rpx;
}

.news-date, .news-views {
  font-size: 24rpx;
  color: #909399;
}

.news-views {
  margin-left: 40rpx;
  display: flex;
  flex-flow: row;
}

.views-icon {
  width: 20px;
  height: 100%;
}

.news-views-count {
  margin-left: 6rpx;
  font-size: 24rpx;
  color: #909399;
}

.right-part {
  width: 25%;
}

.news-thumbnail {
  width: 100%;
  height: 100%;
}
