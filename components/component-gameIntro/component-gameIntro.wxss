/* components/component-gameIntro/component-gameIntro.wxss */

.game-intro {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
}

.game-info {
  height: 300rpx;
  display: flex;
  flex-flow: row;
  border-bottom: 1px solid #dcdcdc;
}

.info-part {
  flex: 1;
  padding: 50rpx;
}

.info-item {
  font-size: 22rpx;
  color: #303133;
  margin-bottom: 25rpx;
}

.info-content {
  color: #909399;
}

.game-desc {
  font-size: 24rpx;
  height: 100%;
  padding: 50rpx;
  line-height: 2;
}
