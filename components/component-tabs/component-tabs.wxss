.modal-content {
  padding: 30rpx 40rpx 40rpx 40rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
}

.modal-title {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  /* color: #909399; */
}

.model-textarea {
  flex: 1 1 auto;
  width: 100%;
  border: 1px solid #dcdcdc;
  border-radius: 4px;
  /* height: 200rpx; */
  margin-top: 20rpx;
  height: 100%;
}
