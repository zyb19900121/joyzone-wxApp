.tabs {
  height: 100%;
  display: flex;
  flex-flow: column;
}

.swiper-tab {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-flow: row;
}

.swiper-tab-item {
  flex: 1;
  color: #303133;
  border-bottom: 2rpx solid #dcdcdc;
}

.active {
  font-weight: bold;
  color: #d81e06;
  border-bottom: 4rpx solid #d81e06;
}

.swiper {
  /* height: 100%; */
  flex: 1;
}

.swiper-item {
  height: 100%;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

.swiper-item.swiper-comment {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: start;
  background: gainsboro;
}

.comment-list {
  flex: 1;
  width: 100%;
}

.comment-input {
  padding: 20rpx;
  width: 100%;
  /* height: 80rpx;
  line-height: 80rpx; */
  background: #ffffff;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.comment-input text{
  color: #409EFF;
  font-size: 30rpx;
}

