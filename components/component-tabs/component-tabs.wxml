<view class='tabs'>
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">资讯</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">攻略</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">图集</view>
    <view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">评论</view>
  </view>
  <swiper class='swiper' current="{{currentTab}}" duration="300" bindchange="swiperTab">
    <swiper-item class="swiper-item">
      <view>资讯 (Coming soon)</view>
    </swiper-item>
    <swiper-item class="swiper-item">
      <view>攻略 (Coming soon)</view>
    </swiper-item>
    <swiper-item class="swiper-item">
      <view>图集 (Coming soon)</view>
    </swiper-item>
    <swiper-item class="swiper-item swiper-comment">
      <view class='comment-list'>评论 (Coming soon)</view>
    </swiper-item>
  </swiper>
  <view class='comment-input' wx:if="{{currentTab==3}}" bindtap='showCommentModal'>
    <text>发表评论</text>
    <!-- <textarea placeholder="请输入评论内容" cursor-spacing="20" /> -->
    <!-- <button type='text' open-type="getUserInfo" bindgetuserinfo="showCommentModal">提 交</button> -->
  </view>
  <component-modal show="{{showModal}}" height='60%' bindcancel="modalCancel" bindconfirm='modalConfirm'>
    <view class='modal-content'>你自己的布局</view>
  </component-modal>
</view>