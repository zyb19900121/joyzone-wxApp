.gallery-list {
  width: 100%;
  height: 100%;
}

.scroll-list {
  width: 100%;
  height: 100%;
}

.gallery-list-wrap {
  height: calc(100% + 5rpx);
  display: flex;
  flex-flow: row;
  flex-wrap: wrap;
  justify-content:start;
  align-content: flex-start;
}

.gallery-item-wrap {
  width: 50%;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.gallery-item {
  width: 100%;
  height: 100%;
  background-color: gainsboro;
  border: 10rpx solid #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 12rpx 0 rgba(0,0,0,.3);
  box-sizing: border-box;
}
