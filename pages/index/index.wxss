.index-container {
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: space-around;
  justify-content: space-between;
  padding: 0 20rpx 10rpx 20rpx;
  box-sizing: border-box;
  min-height: 100%;
}

.game-list-container {
  height: 100%;
}

.game-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.game-item {
  color: #303133;
  width: 237rpx;
  height: 300rpx;
  /* background: gray; */
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.item-cover {
  width: 100%;
  height: 220rpx;
}

.item-cover image {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.item-title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.operation-container {
  height: 100rpx;
  width: 100%;
  background: gray;
}
