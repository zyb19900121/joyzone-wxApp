/* pages/gameNews/gameNews.wxss */

.game-news {
  height: 100%;
  display: flex;
  flex-flow: column;
}

.swiper-container {
  height: 38%;
}

swiper {
  height: 100%;
}

.swiper-item {
  height: 100%;
  position: relative;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-title {
  padding: 10rpx 20rpx;
  background-color: rgba(144, 147, 153, 0.8);
  position: absolute;
  width: 100%;
  bottom: 0;
  font-size: 24rpx;
  color: white;
  box-sizing: border-box;
}

.no-result {
  height: 100%;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
}

.scroll-list {
  height: 62%;
}

.news-list-container {
  height: calc(100% + 5rpx);
}

.news-item {
  height: 150rpx;
  display: flex;
  flex-flow: row;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
}

.left-part {
  width: 75%;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  padding-right:20rpx;
  box-sizing: border-box;
}

.news-title {
  font-size: 30rpx;
}

.news-info {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  padding-right: 50rpx;
}

.news-date, .news-views {
  font-size: 24rpx;
  color: #909399;
}

.news-views {
  margin-left: 40rpx;
  display: flex;
  flex-flow: row;
}

.views-icon {
  width: 20px;
  height: 100%;
}

.news-views-count {
  margin-left: 6rpx;
  font-size: 24rpx;
  color: #909399;
}

.right-part {
  width: 25%;
}

.news-thumbnail {
  width: 100%;
  height: 100%;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 45rpx;
  /* margin-left: 260rpx */
}

.swiper-box .wx-swiper-dot {
  width: 30rpx;
  display: inline-flex;
  height: 10rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  border: 1px solid white;
}

.swiper-box .wx-swiper-dot-active::before {
  background: #d81e06;
}
