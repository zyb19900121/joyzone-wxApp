/* pages/gameNews/gameNews.wxss */

.game-news {
  height: 100%;
  display: flex;
  flex-flow: column;
}

.swiper-container {
  height: 38%;
}

swiper {
  height: 100%;
}

.swiper-item {
  height: 100%;
  position: relative;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-title {
  padding: 10rpx 20rpx;
  background-color: rgba(144, 147, 153, 0.8);
  position: absolute;
  width: 100%;
  bottom: 0;
  font-size: 24rpx;
  color: white;
  box-sizing: border-box;
}
