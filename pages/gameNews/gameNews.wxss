/* pages/gameNews/gameNews.wxss */

.game-news {
  height: 100%;
  display: flex;
  flex-flow: column;
}

.swiper-container {
  height: 38%;
}

swiper {
  height: 100%;
}

.swiper-item {
  height: 100%;
  position: relative;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-title {
  padding: 10rpx 20rpx;
  background-color: rgba(144, 147, 153, 0.8);
  position: absolute;
  width: 100%;
  bottom: 0;
  font-size: 24rpx;
  color: white;
  box-sizing: border-box;
}

.no-result {
  height: 100%;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
}

.scroll-list {
  height: 62%;
}

.news-item {
  height: 150rpx;
  display: flex;
  flex-flow: row;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
}

.left-part {
  width: 75%;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}

.news-title{
  font-size: 30rpx;
}
.news-date{
  font-size: 24rpx;
  color: #909399;
}
.right-part {
  width: 25%;
}
.news-thumbnail{
  width: 100%;
  height: 100%;
}